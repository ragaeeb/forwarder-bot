{
    "compilerOptions": {
        "target": "ESNext",
        "module": "NodeNext",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "declaration": true,
        "sourceMap": true,
        "moduleResolution": "NodeNext",
        "isolatedModules": true,
        "resolveJsonModule": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "paths": {
            "@/*": ["./src/*"]
        }
    },
    "include": ["./src/**/*"],
    "exclude": ["node_modules", "**/*.test.ts", "dist"]
}
